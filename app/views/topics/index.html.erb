<h1>Topics</h1>

<div class="row">
  <div class="col-md-8">
    <!-- loop over each topic    -->
    <% @topics.each do |topic| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
    <!-- create a lik to show the view for each topic   -->
            <%= link_to topic.name, topic %>
          </h4>
          <small>
            <%= topic.description %>
          </small>
        </div>
      </div>
   <% end %>
  </div>
   #check if there was a signed-in current user and current user is an admin
   #to display new topic button only if user is admin
   <% if user_is_authorized_for_topics? %>
     <div class="col-md-4">
       <!-- create a ink to create a new topic   -->
       <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
     </div>
   <% end %>
</div>

